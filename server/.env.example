# Backend Environment Variables
# Copy this file to .env and update with your values

# Server Configuration
PORT=3001
NODE_ENV=development

# BlackBerry Dynamics Configuration
GD_SERVER_URL=https://your-uem-server.com
GD_APP_ID=com.yourcompany.messaging
GD_APP_VERSION=1.0.0
GD_SHARED_USER_ID=your-shared-user-id

# Security
JWT_SECRET=your-jwt-secret-key-change-in-production
ENCRYPTION_KEY=your-encryption-key-change-in-production

# Database (if using)
# DATABASE_URL=postgresql://user:password@localhost:5432/messaging

# Redis (for session management, optional)
# REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/server.log

# CORS
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Quantum/MDS Settings
DEFAULT_ERROR_RATE=0.02
ENABLE_QUANTUM_MODE=true
